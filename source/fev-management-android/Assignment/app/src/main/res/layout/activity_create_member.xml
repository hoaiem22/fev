<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateMemberActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar_create_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#68217a"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member name"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <!-- ................................... -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member student id"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_student_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <!-- ................................... -->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member birth day"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_birth_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>



            <!-- ................................... -->



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member gender"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <!-- ................................... -->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member address"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <!-- ................................... -->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member phone"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <!-- ................................... -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member point"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <!-- ................................... -->



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_member_note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnEventUpdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#68217a"
            android:text="Create Member"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:onClick="createMember"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#68217a</item>
        <item name="colorPrimaryDark">#68217a</item>
        <item name="colorAccent">#68217a</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuBackgroundColor" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:itemBackground">@color/colorTextBlack</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>


</resources>
